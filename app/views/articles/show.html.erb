<div>
  <h1>
    <%= @article.title %> <br />
    <small>
      created <%= time_ago_in_words(@article.created_at) %> ago by <%=  %>
      edited <%= time_ago_in_words(@article.created_at) %> ago by <%= %>
    </small>
  </h1>
</div>
<div class="row">
  <div class="col-md-8">
    <p>
      <%= @article.body %>
    </p>
    <div>
      <div class="col-md-4">
        <%= link_to "Edit", edit_article_path(@article), class:'btn btn-success' %>
        <%= link_to "Delete", [@article], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you suer you want to delete this article?'} %>
      </div>
    </div>
  </div>
</div>

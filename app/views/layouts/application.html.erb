<!DOCTYPE html>
<html>
<head>
  <title>Encyclospeedia</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div>
    <div class="container">
      <ul class="nav nav-tabs pull-left">
        <li><%= link_to "Home", root_path %></li>
        <div class="dropdown" style="float:right; padding: 10px;">
          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Articles
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Horse', articles_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Hound", articles_path, :class => 'navbar-link' %></li>
          </ul>
        </div>
      </ul>
      <ul class="nav nav-tabs pull-right">
        <% if user_signed_in? %>
          <div class="dropdown" style="float:right;">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Welcome, <strong><%= current_user.username %></strong>
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', user_path(current_user), :class => 'navbar-link' %></li>
              <li><%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
            </ul>
            <%= image_tag current_user.avatar_url(48), class: "gravatar" %>
          </div>
          <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path, :class => 'nav ' %></li>
            <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %></li>
          <% end %>
        </ul>
        <br />
  </div>

    <div class="flash">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash.now[:alert] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash.now[:alert] %>
      </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
  <%= yield %>
  </div>
</body>
</html>
